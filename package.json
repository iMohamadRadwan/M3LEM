{
  "name": "m3lem-digital-agency-template",
  "version": "1.0.0",
  "description": "A modern, responsive digital agency website template with Arabic and English support",
  "main": "index.html",
  "scripts": {
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/css/styles.min.css src/css/styles.css",
    "minify-js": "terser src/js/script.js -o dist/js/script.min.js -c -m",
    "serve": "http-server . -p 8080 -o",
    "dev": "http-server . -p 8080 -o -c-1"
  },
  "keywords": [
    "website-template",
    "digital-agency",
    "responsive",
    "arabic",
    "portfolio",
    "modern-design"
  ],
  "author": "M3LEM Digital Agency",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/m3lem-digital-agency-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/m3lem-digital-agency-template/issues"
  },
  "homepage": "https://github.com/your-username/m3lem-digital-agency-template#readme"
}